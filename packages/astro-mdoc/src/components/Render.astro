---
//! astro-head-inject
import type { MarkdocIntegrationOptions } from "../options";
import Renderer from "./Renderer.astro";
import config from 'virtual:wygin/mdoc-config';
import IntegrationOpts from 'virtual:wygin/options';

type Props = {
	body: string;
	options?: MarkdocIntegrationOptions | undefined
};

const { body, options = IntegrationOpts } = Astro.props as Props
---

<Renderer config={config} body=`${body}` options={options}>
    <slot />
</Renderer>
